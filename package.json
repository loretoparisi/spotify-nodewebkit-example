{
  "name": "spotify-nodewebkit-example",
  "version": "1.0.0",
  "description": "Spotify app",
  "main": "index.html",
  "node-remote" : "http://spotify.com",
  "window": {
    "resizable" : true,
    "position" : "center",
    "width": 1080,
    "height": 720,
    "show": true,
    "title": "Spotify",
    "toolbar": false,
    "show_in_taskbar" : true
  },
  "webkit": {
    "page-cache": true,
    "plugin" : true
  },
  "single-instance" : true,
  "app" : {
    "display_name" : "Spotify Scrobbler",
    "url_open_external" : true
  },
  "repository": "https://github.com/loretoparisi/spotify-nodewebkit-example",
  "scripts": {
    "start": "nw ."
  },
  "dependencies": {
    "node-spotify-webhelper": "^0.0.4"
  }
}
